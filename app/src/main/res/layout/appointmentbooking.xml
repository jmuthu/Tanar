<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_dialog_layout_design_user_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESERVE THIS TUTOR"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/userInputDialog"
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:hint="Fill in your additional details around your request."
        android:inputType="textMultiLine"
        android:textAlignment="textStart"
        android:backgroundTint="@color/purple_200"
        android:textColor="@color/black"
        android:textColorHint="#777070" />

</LinearLayout>